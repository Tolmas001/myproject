---
const { title, description = "Web app starter" } = Astro.props;
---

<style is:global>
  @import '../styles/global.css';
</style>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
    <script is:inline src="/scripts/main.js"></script>
  </head>
  <body class="bg-paper text-ink antialiased selection:bg-accent selection:text-white overflow-x-hidden">
    <div class="flex flex-col min-h-dvh">
      <main class="flex-1">
        <slot />
      </main>
    </div>
  </body>
</html>

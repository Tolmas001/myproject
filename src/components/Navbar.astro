---
import { ShoppingBag, Search } from 'lucide-astro';
---

<nav class="container py-8 flex items-center justify-between relative z-50">
  <!-- Logo -->
  <a href="/" class="text-3xl font-display tracking-tight uppercase">
    Glow<span class="italic font-normal">Skin</span>
  </a>

  <!-- Navigation -->
  <div class="hidden md:flex items-center gap-10 text-[11px] font-medium uppercase tracking-[0.2em]">
    <a href="#" class="text-ink border-b border-ink pb-1" data-i18n="nav_shop">Shop</a>
    <a href="#" class="text-muted hover:text-ink transition-colors pb-1 border-b border-transparent" data-i18n="nav_collections">Collections</a>
    <a href="#" class="text-muted hover:text-ink transition-colors pb-1 border-b border-transparent" data-i18n="nav_philosophy">Philosophy</a>
    <a href="#" class="text-muted hover:text-ink transition-colors pb-1 border-b border-transparent" data-i18n="nav_about">About</a>
  </div>

  <!-- Actions & Lang -->
  <div class="flex items-center gap-6">
    <!-- Language Switcher -->
    <div class="flex gap-2 text-[10px] font-bold uppercase tracking-tighter border-r border-ink/10 pr-6 mr-2">
      <button class="lang-btn hover:text-accent transition-colors cursor-pointer" data-lang="en">EN</button>
      <span class="text-ink/20">/</span>
      <button class="lang-btn hover:text-accent transition-colors cursor-pointer" data-lang="uz">UZ</button>
      <span class="text-ink/20">/</span>
      <button class="lang-btn hover:text-accent transition-colors cursor-pointer" data-lang="ru">RU</button>
    </div>

    <button class="text-ink hover:opacity-70 transition-opacity">
      <Search size={20} strokeWidth={1.5} />
    </button>
    <button class="text-ink hover:opacity-70 transition-opacity relative">
      <ShoppingBag size={20} strokeWidth={1.5} />
      <span class="absolute -top-1 -right-1 bg-accent text-white text-[10px] w-4 h-4 rounded-full flex items-center justify-center">0</span>
    </button>
  </div>
</nav>

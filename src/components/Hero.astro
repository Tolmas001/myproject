---

<section class="container relative py-12 md:py-24 overflow-hidden">
  <div class="grid lg:grid-cols-2 gap-16 items-center">
    
    <!-- Left Content -->
    <div class="space-y-10 relative z-10 order-2 lg:order-1">
      <div class="space-y-6">
        <span class="text-[11px] uppercase tracking-[0.4em] text-accent font-semibold" data-i18n="hero_new">New Collection 2026</span>
        <h1 class="text-6xl md:text-8xl font-display leading-[1.05] tracking-tight" data-i18n="hero_title">
          Beauty In Simplicity
        </h1>
        <p class="text-muted text-lg max-w-md leading-relaxed" data-i18n="hero_desc">
          Experience the pure essence of nature with our dermatologically tested, organic skincare routine. Crafted for every skin type.
        </p>
      </div>
      
      <div class="flex items-center gap-6 pt-4">
        <a href="#shop" class="btn btn-primary px-12 py-4 uppercase text-[11px] tracking-widest" data-i18n="hero_cta">
          Shop Now
        </a>
        <a href="#" class="group flex items-center gap-3 text-[11px] uppercase tracking-widest font-bold">
          <span data-i18n="hero_story">Our Story</span>
          <span class="w-8 h-[1px] bg-ink transition-all group-hover:w-12"></span>
        </a>
      </div>

      <div class="grid grid-cols-3 gap-8 pt-12 border-t border-ink/5">
        <div>
          <span class="block text-2xl font-display">98%</span>
          <span class="text-[10px] uppercase tracking-wider text-muted" data-i18n="hero_feat1">Natural Ingredients</span>
        </div>
        <div>
          <span class="block text-2xl font-display">100%</span>
          <span class="text-[10px] uppercase tracking-wider text-muted" data-i18n="hero_feat2">Cruelty Free</span>
        </div>
        <div>
          <span class="block text-2xl font-display">24h</span>
          <span class="text-[10px] uppercase tracking-wider text-muted" data-i18n="hero_feat3">Deep Hydration</span>
        </div>
      </div>
    </div>
    
    <!-- Right Content (Image) -->
    <div class="relative z-10 order-1 lg:order-2">
      <div class="relative aspect-[4/5] rounded-[2rem] overflow-hidden">
        <img 
          src="/images/cosmetics-hero.jpg" 
          alt="Clean Beauty" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-accent/10 mix-blend-multiply"></div>
      </div>
    </div>
  </div>
</section>
